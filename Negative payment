class CheckoutApp {

    static void pay(int balance, int amount) throws Exception {
        if (amount < 0) throw new Exception("Negative amount");
        if (amount > balance) throw new Exception("Insufficient funds");
        System.out.println("Payment OK");
    }

    public static void main(String[] args) {

        System.out.println("DB Open");

        try {
            pay(5000, 7000);
        }
        catch (Exception e) {
            System.out.println("Error: " + e.getMessage());
        }
        finally {
            System.out.println("DB Closed");
        }
    }
}
